= form_for @advertisement do |f|
  - if @advertisement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@advertisement.errors.count, "error")} prohibited this advertisement from being saved:"
      %ul
        - @advertisement.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :views
    = f.number_field :views
  .field
    = f.label :ratings_count
    = f.number_field :ratings_count
  .field
    = f.label :rating
    = f.text_field :rating
  .actions
    = f.submit 'Save'
