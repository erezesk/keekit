= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :birthday
    = f.datetime_select :birthday
  .field
    = f.label :country
    = f.text_field :country
  .actions
    = f.submit 'Save'
